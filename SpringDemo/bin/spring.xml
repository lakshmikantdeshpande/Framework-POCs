<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="triangle" class="sachin.lakshmikant.Triangle">

		<!-- Setter Injection below -->
		<!-- <property name="type" value="Equilateral"></property> -->


		<!-- Constructor Injection below (Sequence important)-->
		<!-- For a constructor with 2 parameters, we can use 2 constructor-arg s -->
		<!--  optional attributes: type, index -->
		
		<constructor-arg index = "0" type = "java.lang.String" value="Equilateral"></constructor-arg>
		<constructor-arg index = "1" type = "int" value="50"></constructor-arg>
		
	</bean>

</beans>