<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="triangle" class="sachin.lakshmikant.Triangle">
		<property name ="pointA" ref = "zeroPoint"></property>
		<property name ="pointB" ref = "onePoint"></property>
		<property name ="pointC" ref = "twoPoint"></property>
	</bean>

	<bean id="zeroPoint" class="sachin.lakshmikant.Point">
		<property name="x" value="0"></property>
		<property name="y" value="0"></property>
	</bean>


	<bean id="onePoint" class="sachin.lakshmikant.Point">
		<property name="x" value="10"></property>
		<property name="y" value="10"></property>
	</bean>

	<bean id="twoPoint" class="sachin.lakshmikant.Point">
		<property name="x" value="20"></property>
		<property name="y" value="20"></property>
	</bean>

</beans>